@{
	ViewData["Title"] = "Créer un événement";
}

<div id="jds_login" class="d-flex justify-content-center align-items-center">
	<div class="col p-4">
		<form class="" enctype="multipart/form-data" method="post" asp-controller="Event" asp-action="ParseEvent">
			<label>
				Titre
				<input type="text" name="title" required />
			</label>
			<label>
				Description
				<textarea rows="4" name="description" required></textarea>
			</label>
			<label>
				Date
				<input type="datetime-local" name="date" required />
			</label>
			<label>
				Images
				<input type="file" multiple name="files" accept=".jpg, .jpeg, .png"/>
			</label>
			<button type="submit" class="jds-button jds-primary">
				<span class="left"></span>
				<span class="top"></span>
				<span class="right"></span>
				<span class="bottom"></span>
				Ajouter
			</button>
		</form>
	</div>
</div>

