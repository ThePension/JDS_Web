@{
    ViewData["Title"] = "Jeunesse de Savagnier";
}

<div id="jds_index_carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/JDS_insta_1.jpg" class="d-block w-100" alt="img1">
        </div>
        <div class="carousel-item">
            <img src="~/img/JDS_insta_2.jpg" class="d-block w-100" alt="img2">
        </div>
        <div class="carousel-item">
            <img src="~/img/JDS_insta_3.jpg" class="d-block w-100" alt="img3">
        </div>
        <div class="carousel-item">
            <img src="~/img/JDS_insta_4.jpg" class="d-block w-100" alt="img4">
        </div>
    </div>
</div>

<div class="jds-banner text-uppercase">
    <h1>Jeunesse de Savagnier</h1>
</div>

<div class="jds-index-flex-container">
    <div class="card" style="width: 30rem;">
        <img src="~/img/jds_events.jpg" class="card-img-top" alt="events">
        <div class="card-body">
            <h2 class="card-title">Événements</h2>
            <p class="card-text">Découvrez les futurs événements auxquels la JDS participe</p>
            <a href="#" class="btn btn-primary">Plus d'infos</a>
        </div>
    </div>
    <div class="card" style="width: 30rem;">
        <img src="~/img/jds_events.jpg" class="card-img-top" alt="committee">
        <div class="card-body">
            <h2 class="card-title">Comité</h2>
            <p class="card-text">Le comité est formé de 6 gaillards super motivé</p>
            <a href="#" class="btn btn-primary">Plus d'infos</a>
        </div>
    </div>
    <div class="card" style="width: 30rem;">
        <img src="~/img/jds_events.jpg" class="card-img-top" alt="store">
        <div class="card-body">
            <h2 class="card-title">Nos produits</h2>
            <p class="card-text">La JDS propose divers vêtements aux couleurs de Savagnier</p>
            <a href="#" class="btn btn-primary">Plus d'infos</a>
        </div>
    </div> 
</div>