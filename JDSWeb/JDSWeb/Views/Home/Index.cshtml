@model HomeViewModel
@{
    ViewData["Title"] = "Jeunesse de Savagnier";
}

<div class="container">
    @if (Model.UserLoggedIn)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            Bienvenue <strong>@Context.Session.GetString(UserViewModel.SessionKeyUserName)</strong>, vous êtes à présent connecté
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.UserLoggedOut)
    {
        <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
            Vous vous êtes déconnecté
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

<div id="jds_index_carousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="https://ik.imagekit.io/xvrdzz8ao/jds_ag_2_nnvfl8PNa.jpg" class="d-block w-100" alt="img1">
        </div>
        <div class="carousel-item">
            <img src="https://ik.imagekit.io/xvrdzz8ao/JDS_insta_4_e2wECYHFr.jpg" class="d-block w-100" alt="img2">
        </div>
    </div>
</div>

<div class="jds-banner text-uppercase">
    <h1>Jeunesse de Savagnier</h1>
</div>

<div class="jds-index-flex-container">
    <div class="card" style="width: 30rem;">
        <img src="~/img/jds_event.jpg" class="card-img-top" alt="events">
        <div class="card-body">
            <h2 class="card-title">Événements</h2>
            <p class="card-text">Découvrez les futurs événements auxquels la JDS participe</p>
            <a href="@Url.Action("ActualEvents", "Event")" class="btn btn-primary">Plus d'infos</a>
        </div>
    </div>
    <div class="card" style="width: 30rem;">
        <img src="~/img/jds_committee1.jpg" class="card-img-top" alt="committee">
        <div class="card-body">
            <h2 class="card-title">Comité</h2>
            <p class="card-text">Le comité est formé de 6 gaillards super motivé</p>
            <a href="@Url.Action("Committee", "Society")" class="btn btn-primary">Plus d'infos</a>
        </div>
    </div>
    <div class="card" style="width: 30rem;">
        <img src="~/img/jds_tshirt_jaune.png" class="card-img-top" alt="store">
        <div class="card-body">
            <h2 class="card-title">Nos produits</h2>
            <p class="card-text">La JDS propose divers vêtements aux couleurs de Savagnier</p>
            <a href="@Url.Action("Products", "Shop")" class="btn btn-primary">Plus d'infos</a>
        </div>
    </div>
</div>