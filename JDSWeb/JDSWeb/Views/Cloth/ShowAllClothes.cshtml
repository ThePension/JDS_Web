@{
    ViewData["Title"] = "Nos produits";
}

@model ClothViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowAllClothes</title>
</head>
<body>
    <h1 class="text-center">Nos produits</h1>
    <table>
    @for (int i = 0; i < @Model.Clothes.Length; i++)
    {
        <tr>
            <td>
                @Model.Clothes[i].Name
            </td>
            <td>
                @Model.Clothes[i].Description
            </td>
            <td>
                <img src="@Model.Clothes[i].Images.FirstOrDefault().URL" />
            </td>
        </tr>
    }
    </table>
</body>
</html>
