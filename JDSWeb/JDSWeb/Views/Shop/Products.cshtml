@{
    ViewData["Title"] = "Nos produits";
    ViewData["Active"] = "society";
    ViewData["MobileActive"] = "products";
}

@model ShopViewModel

<div id="jds-products" class="container">
    <div class="text-center my-4">
        <h1>Produits</h1>
    </div>
    <div class="d-flex flex-wrap justify-content-around">
        <div class="jds-product-card">
            <div class="jds-product-img-box">
                <img src="~/img/jds_store.png" />
            </div>
            <div class="jds-product-details">
                <h3>
                    T-Shirt<br />
                    <span>Bleu</span>
                </h3>
                <h4>Détails</h4>
                <p>Lorem ipsum je sais pas quoi mettre</p>
                <h4>Tailles</h4>
                <ul class="jds-product-size">
                    <li>XS</li>
                    <li>S</li>
                    <li>M</li>
                    <li>L</li>
                    <li>XL</li>
                    <li>XXL</li>
                </ul>
                <div class="jds-product-buy">
                    <h2><sup>CHF</sup>199<small>.99</small></h2>
                    <a class="jds-button jds-info" href="#">
                        Acheter
                        <span class="top"></span>
                        <span class="right"></span>
                        <span class="bottom"></span>
                        <span class="left"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>