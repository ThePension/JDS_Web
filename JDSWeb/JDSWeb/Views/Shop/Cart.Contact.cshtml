@{
    ViewData["Title"] = "Panier";
    ViewData["Active"] = "shop";
    ViewData["MobileActive"] = "shop";
}

@model ShopViewModel

<nav class="my-4" aria-label="Navigation Panier">
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" asp-controller="Shop" asp-action="Cart" asp-route-id="@ShopViewModel.Overview">Récapitulatif</a></li>
        <li class="page-item active"><a class="page-link">Contact</a></li>
        <li class="page-item disabled"><a class="page-link">Confirmation</a></li>
    </ul>
</nav>

<div id="jds-cart-contact">
    <form class="row g-3 needs-validation" method="post" asp-controller="Shop" asp-action="Confirm" novalidate>
        <div class="col-md-6">
            <label for="first_name" class="form-label">Prénom</label>
            <input type="text" class="form-control" id="first_name" name="first_name" required>
            <div class="invalid-feedback">
                Champ requis.
            </div>
        </div>
        <div class="col-md-6">
            <label for="last_name" class="form-label">Nom</label>
            <input type="text" class="form-control" id="last_name" name="last_name" required>
            <div class="invalid-feedback">
                Champ requis.
            </div>
        </div>
        <div class="col-md-12">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" id="email" name="email" value="@Model.User.Email" required>
            <div class="invalid-feedback">
                Champ requis.
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <a class="btn btn-outline-secondary" asp-controller="Shop" asp-action="Cart" asp-route-id="@ShopViewModel.Overview">
                <i class="fa-solid fa-angles-left me-1"></i>
                Précédent
            </a>
            <button type="submit" class="btn btn-outline-primary">
                <i class="fa-solid fa-angles-right me-1"></i>
                Suivant
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}